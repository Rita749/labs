#include <stdio.h>

int pr(int n)
{
    if (n > 1)
    {
        for (int i = 2; i < n; i++)
            if (n % i == 0) 
                return -1;
        return 1;
    }
    else 
        return -1;
}

int pl(int n, int i = 2)
{
   if ((i > n/2) && (n != 1))
		return 1;
	return -1;
	return n%i ? pl(n,++i) : -1;
}

int main()
{

    int n, i;
    printf("Input a number: ");
    scanf("%d", &n);
    printf("Cycle: %d\n", pr(n));
    printf("Recurcion: %d\n", pl(n));
}
